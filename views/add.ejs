<%- include('particles/header.ejs') %>

<%- include('particles/navigation.ejs') %>

<form action="/store" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label class="form-group__label" for="title">Заголовок</label>
        <input class="form-group__input" type="text" id="title" name="title" placeholder="Заголовок">
    </div>

    <div class="form-group">
        <label class="form-group__label" for="image">Картинка</label>
        <input type="file" name="image" id="image" class="form-button">
    </div>

    <div class="form-group">
        <label class="form-group__label" for="location">Локация</label>
        <select name="location" id="location">
            <% for(let i = 0; i < item.length; i++) {%>
                <option value="<%= item[i].title %>"><%= item[i].title %></option>
            <% } %>
        </select>
    </div>


    <input class="form-button" type="submit" value="Создать">
</form>

<%- include('particles/footer.ejs') %>