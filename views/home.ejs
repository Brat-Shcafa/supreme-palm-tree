<%- include('particles/header.ejs') %>

<%- include('particles/navigation.ejs') %>

<% if (items.length>0) {%>
    <div>
        <% for (let i = 0; i < items.length; i++) {%>
            <div class="section">
                <a href="/item/<%= items[i].id %>">
                    <h2 class="sextion__title"><%= items[i].title %></h2>
                    <img class="section__image" src="/img/<%= items[i].image %>" alt="<%= items[i].title %>">
                </a>
                <form action="/delete" method="post">
                    <div class="form-group">
                        <input type="submit" value="Удалить" class="form-button">
                        <input type="hidden" name="id" value="<%= items[i].id %>">
                    </div>
                </form>
            </div>
        <% } %>
    </div>
<% } %>
<%- include('particles/footer.ejs') %>
